<div class="container pestañas">
  <div class="row">
    <div class="col-12">
        <ul class="nav nav-tabs nav-fill">
          {{#each grupos}}
            <li class="nav-item">
              <a class="nav-link {{#is this.letra 'A'}}active{{/is}}" data-toggle="tab" href="#grupo{{this.letra}}">Grupo {{this.letra}}</a>
            </li>
          {{/each}}
        </ul>
    </div>
  </div>
</div>

<div class="tab-content" id="myTabContent">
  {{#each grupos}}
    <div class="tab-pane fade show {{#is this.letra 'A'}}active{{/is}}" id="grupo{{this.letra}}" role="tabpanel" aria-labelledby="grupo-a-tab">
      <div class="row">
        <div class="col-12">
          <div class="table-responsive">
            <table class="table" id="tabla-grupo-{{this.letra}}">
              <thead>
                <tr class="table-info">
                  <th scope="col">{{this.letra}}</th>
                  <th scope="col">Equipo</th>
                  <th scope="col">Pts</th>
                  <th scope="col">PJ</th>
                  <th scope="col">PG</th>
                  <th scope="col">PE</th>
                  <th scope="col">PP</th>
                  <th scope="col">GF</th>
                  <th scope="col">GC</th>
                  <th scope="col">+/-</th>
                </tr>
              </thead>
              <tbody>
                {{#each equipos}}
                  <tr>
                    <td class="align-middle">{{add @index 1}}</td>
                    <td class="align-middle">
                      <div class="container">
                        <div class="row">
                          <div class="col-4">
                            <img src="./images/banderas/{{this.nombre}}.png" class="border" />
                          </div>
                          <div class="col-8 text-center">
                            <span class="team-name">{{this.nombre}}</span>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="align-middle">{{this.resultados_grupo.puntos}}</td>
                    <td class="align-middle">{{this.resultados_grupo.pj}}</td>
                    <td class="align-middle">{{this.resultados_grupo.pg}}</td>
                    <td class="align-middle">{{this.resultados_grupo.pe}}</td>
                    <td class="align-middle">{{this.resultados_grupo.pp}}</td>
                    <td class="align-middle">{{this.resultados_grupo.gf}}</td>
                    <td class="align-middle">{{this.resultados_grupo.gc}}</td>
                    <td class="align-middle">{{this.resultados_grupo.dif}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-12">
          <hr>
          <h1 class="text-center my-4">PARTIDOS GRUPO {{this.letra}}</h1>
          <div id="accordion{{this.letra}}">
            <ul class="list-group" id="partidos-grupo-{{this.letra}}">
              {{#each partidos}}
              <li class="list-group-item">
                <div class="container-fluid">
                  <div class="row text-center">
                    <div class="col-4">
                      <img src="./images/banderas/{{this.equipo1}}.png" class="border" />
                      <br>
                      <a class="equipo" data-toggle="modal" data-target="#modalEquipo" onclick="cargarModalEquipo($(this).text())">{{this.equipo1}}</a>
                    </div>
                    <div class="col-1 align-self-center">
                        <span class="score">
                          {{#each pronosticos}}
                            {{#is this.user username}} {{this.golesEquipo1}} {{/is}}
                          {{/each}}
                        </span>
                    </div>
                    <div class="col-2 align-self-center">
                      {{this.fecha}}
                    </div>
                    <div class="col-1 align-self-center">
                        <span class="score">
                          {{#each pronosticos}}
                            {{#eq this.user username}} {{this.golesEquipo1}} {{/eq}}
                          {{/each}}
                        </span>
                    </div>
                    <div class="col-4">
                      <img src="./images/banderas/{{this.equipo2}}.png" class="border" />
                      <br>
                      <a class="equipo" data-toggle="modal" data-target="#modalEquipo" onclick="cargarModalEquipo($(this).text())">{{this.equipo2}}</a>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col text-center">
                      <button type="button" class="btn btn-primary my-3" data-toggle="collapse" data-target="#pronostico{{../letra}}{{@index}}" >Ingresar pronóstico</button>
                    </div>
                  </div>
                </div>
                <div class="collapse" data-parent="#accordion{{../letra}}" id="pronostico{{../letra}}{{@index}}">
                    <div class="card card-body">
                      <form>
                        <div class="row">
                          <div class="col-3 offset-3 text-center">
                            <div class="form-group">
                              <label>Goles</label>
                              <select class="form-control">
                                <option>0</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                                <option>7</option>
                                <option>8</option>
                                <option>9</option>
                                <option>10</option>
                              </select>
                            </div>
                          </div>
                          <div class="col-3 text-center">
                            <div class="form-group">
                              <label>Goles</label>
                              <select class="form-control">
                                <option>0</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                                <option>7</option>
                                <option>8</option>
                                <option>9</option>
                                <option>10</option>
                              </select>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col text-center">
                            <button type="button" class="btn btn-primary" onclick="agregarPronostico(this)">Enviar</button>
                          </div>
                        </div>
                      </form>
                    </div>
                </div>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>

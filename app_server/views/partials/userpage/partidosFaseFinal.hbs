<li class="list-group-item">
  <div class="container-fluid">
    <div class="row text-center">
      <div class="col-4">
        {{#if this.creado}}
          <img src="./images/banderas/{{this.equipo1}}.png" class="border" />
          <br>
          <a class="equipo" data-toggle="modal" data-target="#modalEquipo" onclick="cargarModalEquipo($(this).text())">{{this.equipo1}}</a>
        {{else}}
          <img src="./images/banderas/banderaneutra.png" class="border" />
          <br>
        {{/if}}
      </div>
      <div class="col-1 align-self-center">
        {{#if this.jugado}}
          <span class="score"> {{this.golesEquipo1}} </span>
        {{else}}
          {{#each pronosticos}}
            <span class="score">
              {{#is this.user @root.nombre}}{{this.golesEquipo1}}{{/is}}
            </span>
          {{/each}}
        {{/if}}
      </div>
      <div class="col-2 align-self-center">
        {{this.fecha}}
      </div>
      <div class="col-1 align-self-center">
        {{#if this.jugado}}
          <span class="score"> {{this.golesEquipo2}} </span>
        {{else}}
          {{#each pronosticos}}
            <span class="score">
              {{#is this.user @root.nombre}}{{this.golesEquipo2}}{{/is}}
            </span>
          {{/each}}
        {{/if}}
      </div>
      <div class="col-4">
        {{#if this.creado}}
          <img src="./images/banderas/{{this.equipo2}}.png" class="border" />
          <br>
          <a class="equipo" data-toggle="modal" data-target="#modalEquipo" onclick="cargarModalEquipo($(this).text())">{{this.equipo2}}</a>
        {{else}}
          <img src="./images/banderas/banderaneutra.png" class="border" />
          <br>
        {{/if}}
      </div>
    </div>
    <div class="row">
      <div class="col text-center">
        {{#if this.jugado}}
          <span class="team-name"> Partido jugado </span>
        {{else}}
          {{#if this.cerrado}}
            <span class="team-name"> Partido cerrado </span>
          {{else}}
            {{#if this.creado}}
              <button type="button" class="btn btn-primary my-3" data-toggle="collapse" data-target="#pronostico{{../letra}}{{@index}}">Ingresar pron√≥stico</button>
            {{/if}}
          {{/if}}
        {{/if}}
      </div>
    </div>
  </div>
  <div class="collapse" data-parent="#accordion{{../letra}}" id="pronostico{{../letra}}{{@index}}">
      <div class="card card-body">
        <form>
          <div class="row">
            <div class="col-3 offset-3 text-center">
              <div class="form-group">
                <label>Goles</label>
                <select class="form-control">
                  <option>0</option>
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                  <option>6</option>
                  <option>7</option>
                  <option>8</option>
                  <option>9</option>
                  <option>10</option>
                </select>
              </div>
            </div>
            <div class="col-3 text-center">
              <div class="form-group">
                <label>Goles</label>
                <select class="form-control">
                  <option>0</option>
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                  <option>6</option>
                  <option>7</option>
                  <option>8</option>
                  <option>9</option>
                  <option>10</option>
                </select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col text-center">
              <button type="button" class="btn btn-primary" onclick="agregarPronosticoFaseFinal(this)">Enviar</button>
            </div>
          </div>
        </form>
      </div>
  </div>
</li>
